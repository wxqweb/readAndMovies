<!--pages/movies/star/star-component.wxml-->
<view class='stars-container'>
  <view class='stars'>
   	<block wx:for="{{stars}}" wx:for-item="key" wx:key="key">
  		<image wx:if="{{key === 1}}" src='/images/icon/star.png'></image>
  		<image wx:elif="{{key === 2}}" src='/images/icon/half-star.png'></image>
  		<image wx:else src='/images/icon/none-star.png'></image>
  	</block>
    
  </view>
  <text class='star-score'>{{score}}</text>
</view>
